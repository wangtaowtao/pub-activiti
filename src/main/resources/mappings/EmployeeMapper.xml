<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eyaoshun.activiti.oa.dao.IEmployeeMapper" >
  <resultMap id="BaseResultMap" type="com.eyaoshun.activiti.oa.entity.Employee" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="role" property="role" jdbcType="VARCHAR" />
    <association property="manager" column="manager_id" select="findEmployeeById" javaType="com.eyaoshun.activiti.oa.entity.Employee"/>
  </resultMap>
  <sql id="Base_Column_List" >
    id, name, password, email, role,manager_id
  </sql>
  <select id="findEmployeeByName" resultMap="BaseResultMap" parameterType="java.lang.String" >
	SELECT
	<include refid="Base_Column_List"/>
	FROM
	a_employee  e
	WHERE e.name = #{name}
  </select>

 <select id="findEmployeeById" resultMap="BaseResultMap">
	SELECT
	<include refid="Base_Column_List"/>
	FROM
	a_employee
	WHERE id = #{id} 
  </select>
</mapper>